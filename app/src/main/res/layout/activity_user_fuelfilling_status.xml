<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E1CF"
    tools:context=".UserFuelfillingStatus">

    <Button
        android:id="@+id/exitBeforePumpFuel"
        android:layout_width="190dp"
        android:layout_height="74dp"
        android:backgroundTint="#626CC3"
        android:text="Exit before pump fuel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.337" />

    <EditText
        android:id="@+id/petrolQtyFromUser"
        android:layout_width="178dp"
        android:layout_height="56dp"
        android:background="@drawable/edittextbackground"
        android:backgroundTint="@color/white"
        android:hint="Petrol Qty"
        android:paddingLeft="20dp"
        android:textColorHint="#009688"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toTopOf="@+id/ExitAfterPumpFuel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exitBeforePumpFuel"
        app:layout_constraintVertical_bias="0.795" />

    <Button
        android:id="@+id/ExitAfterPumpFuel"
        android:layout_width="190dp"
        android:layout_height="74dp"
        android:backgroundTint="#515A6A"
        android:text="Exit After pump fuel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exitBeforePumpFuel"
        app:layout_constraintVertical_bias="0.548" />

    <TextView
        android:id="@+id/tViewPetrolShedName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Petrol Shed Name"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/exitBeforePumpFuel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>